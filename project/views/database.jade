extends layout

block title
  title My Database
block content
  h1.page-header Database Management
  span(style='margin-left: 10px;') My Database > 
    a(id='mydatabase', href='javascript:void(0);') #{database}
      div(style='width:100%; height:100%; overflow: hidden; margin-left: -209px;')
        iframe(width='100%', height='600px', src='http://localhost:5984/_utils/database.html?#{database}', frameborder='no', border='0', marginwidth='0', marginheight='0', scrolling='no', style='overflow:hidden; margin-top:-33px; margin-left: 209px;')
  script(type='text/javascript').
    $(function(){
      $('#mydatabase').click(function(){
          $('iframe').attr('src','http://localhost:5984/_utils/database.html?#{database}');
      });
    });
