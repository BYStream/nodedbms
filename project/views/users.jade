extends layout

block title
  title User Management
block content
  h1.page-header User Management
  div.panel.panel-default
    div.panel-heading
      strong Add New User
    div.panel-body
      div(style='width:400px')
        form(action='./users', method='post')
          input.form-control(type='text', name='username', placeholder='Username', required='')
          input.form-control(type='text', name='password', placeholder='Password', required='')
          input.form-control(type='text', name='repeatpsd', placeholder='Repeat Password', required='')
          span User's Role
            select(name='role')
              option(value='user') General User
              option(value='admin') Administrator
          input.form-control(type='text', name='database', placeholder='Database', required='')
          input.form-control(type='text', name='description', placeholder='Description', required='')
          button.btn.btn-lg.btn-primary.btn-block(type='submit') Add New User
    table.table
      thead
        tr
          th User Name
          th Role
          th Database
          th Description
          th Operation
       tbody
         for user in result
           tr
             td #{user.id}
             td #{user.value.role}
             td #{user.value.database}
             td #{user.value.description}
             td
               button.btn.btn.default(type='button') Deactivate/Activate